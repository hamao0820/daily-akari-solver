{
  "manifest_version": 3,
  "name": "daily akari solver",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["https://dailyakari.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["image/*", "opencv.js", "opencv.wasm", "sandbox.html"],
      "matches": ["https://dailyakari.com/*"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["storage"],
  "host_permissions": ["https://akari-solver.kentakom1213.workers.dev/*"],
  "sandbox": {
    "pages": ["sandbox.html"]
  }
}
